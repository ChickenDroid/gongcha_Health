    android:orientation="vertical" android:layout_width="match_parent"
    android:id="@+id/loading_back"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
