<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="10dp"
        android:text="러닝 트레이닝 for Beginner"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:textStyle="normal" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text=" 30분간 초급 코스로 달리는 훈련 프로그램입니다.\n 중급 코스로 넘어가기 전 충분히 반복 트레이닝 하세요!"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="normal" />

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:background="@color/white">

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            android:orientation="vertical"
            android:background="@color/white">
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            android:orientation="horizontal"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="1주"
                android:paddingRight="70dp"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="normal" />
            <Button
                android:id="@+id/btn1_1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/ic_btn_1"
                android:text="35:00"
                android:textColor="@color/black"
                ></Button>
            <Button
                android:id="@+id/btn1_2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/ic_btn_2"
                android:text="39:00"
                android:textColor="@color/black"
                ></Button>
            <Button
                android:id="@+id/btn1_3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/ic_btn_3"
                android:text="40:00"
                android:textColor="@color/black"
                ></Button>
        </LinearLayout>

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp"
                android:paddingTop="20dp"
                android:orientation="horizontal"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:text="2주"
                    android:paddingRight="70dp"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="normal" />
                <Button
                    android:id="@+id/btn2_1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/ic_btn_1"
                    android:text="35:00"
                    android:textColor="@color/black"
                    ></Button>
                <Button
                    android:id="@+id/btn2_2"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/ic_btn_2"
                    android:text="39:00"
                    android:textColor="@color/black"
                    ></Button>
                <Button
                    android:id="@+id/btn2_3"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/ic_btn_3"
                    android:text="36:00"
                    android:textColor="@color/black"
                    ></Button>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>